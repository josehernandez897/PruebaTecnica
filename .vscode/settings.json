{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    },

    "css.validate": false,
    "less.validate": true,
    "scss.validate": true,

    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[blade]": {
      "editor.defaultFormatter": "shufo.vscode-blade-formatter"
    }
  }
